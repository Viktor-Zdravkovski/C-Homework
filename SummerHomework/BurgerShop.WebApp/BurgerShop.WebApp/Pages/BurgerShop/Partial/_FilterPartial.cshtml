@model FilterDto

<form asp-controller="Burger" asp-action="Filter" method="post">
	<div class="row">
		<div class = "col-md-4">
			<div class = "mb-3">
				<div class = "form-label">Burger</div>
				<select name="burgerId" class="form-select" asp-items="@(new SelectList(Model.Burgers, "id", "Name", Model.BurgerId))">
					<option value="0">All</option>
				</select>
			</div>
		</div>
		<div class = "col-md-4">
			<div class = "mb-3">
				<div class = "form-label">Order</div>
				<select name = "orderId" class= "form-select" asp-items="@(new SelectList(Model.Orders, "id", "Name", Model.OrderId))">
					<option value = "0">All</option>
				</select>
			</div>
		</div>
		<div class= "col-md-3 p-4">
			<button type="submit" class="btn btn-outline-primary">Filter</button>
			<a asp-action="Index" class="btn btn-outline-primary">Clear</a> 
		</div>
	</div>
</form>